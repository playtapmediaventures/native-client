{
  "name": "native-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-app-rewired start --scripts-version react-scripts",
    "start:prod": "serve -s build",
    "build": "GENERATE_SOURCEMAP=false react-app-rewired build --scripts-version react-scripts",
    "deploy:staging": "node ./scripts/deploy.js",
    "test": "react-app-rewired test --scripts-version react-scripts",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react",
      "react-app"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/prop-types": 0,
      "no-underscore-dangle": 0,
      "import/imports-first": [
        "error",
        "absolute-first"
      ],
      "import/newline-after-import": "error",
      "prettier/prettier": [
        "error"
      ]
    },
    "globals": {
      "window": true,
      "document": true,
      "localStorage": true,
      "FormData": true,
      "FileReader": true,
      "Blob": true,
      "navigator": true
    }
  },
  "eslintIgnore": [
    "coverage",
    "node_modules"
  ],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "NODE_ENV=production lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "pretty-quick --staged",
      "eslint src/ --fix",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "axios-jsonp": "^1.0.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@storybook/react": "^4.1.6",
    "aws-sdk": "^2.391.0",
    "babel-loader": "8.0.4",
    "compression-webpack-plugin": "^2.0.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.3",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mime-types": "^2.1.21",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "react-app-rewired": "^2.0.1"
  }
}
